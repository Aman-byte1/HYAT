generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Reading {
  id        Int      @id @default(autoincrement())
  timestamp DateTime @default(now())
  voltage1  Float
  voltage2  Float    @default(0)
  voltage3  Float    @default(0)
  temp      Float
  oilLevel  Float
  quality   Float
}

model Alarm {
  id        Int      @id @default(autoincrement())
  timestamp DateTime @default(now())
  type      String   // "VOLTAGE", "TEMP", "OIL", "QUALITY"
  message   String
  acked     Boolean  @default(false)
}